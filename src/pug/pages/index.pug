extends ../layouts/app.pug

block variables
  - var pageTitle = " Homepage"
  - var pageName = "homepage"
  - var headerHome = true
  - var footerBg = true

block content
  div#home
    .main-wrap
      include ../components/header/main.pug
      |
      |
      |
      main.container-wrap
        // ##### BANNER #####
        section#banner
          include ../components/home/banner-slider.pug
        // ##### END BANNER #####
        |
        |
        |
        // ##### FEATURE #####
        section#feature.space-top-short
          include ../components/home/feature.pug
        // ##### END FEATURE #####
        |
        |
        |
        // ##### COUNTER #####
        section#counter.space-top
          include ../components/home/counter.pug
        // ##### END COUNTER #####
        |
        |
        |
        // ##### DISCOVER #####
        section#discover.space-top
          include ../components/home/discover.pug
        // ##### END DISCOVER #####
        |
        |
        |
        // ##### STORIES #####
        section#stories.space-top
          include ../components/home/stories.pug
        // ##### END STORIES #####
        |
        |
        |
        // ##### COMUNITIES #####
        section#community.space-top-short
          include ../components/home/top-communities.pug
        // ##### END COMUNITIES #####
        |
        |
        |
        // ##### BLOG #####
        section#news-event.mq-sm-down.container-front(data-class="space-top")
          include ../components/home/news-event.pug
        // ##### END BLOG #####
        |
        |
        |
        // ##### CALL ACTION #####
        section#call-action.container-front.space-bottom
          include ../components/call-action.pug
        // ##### END CALL ACTION #####
        |
        |
        |
      // ##### FOOTER #####
      include ../components/footer/main.pug
      // ##### END FOOTER #####
      |
      |
      |
      // ##### NOTIFICATIONS #####
      .hidden-md-down
        include ../components/notifications.pug
      // ##### END NOTIFICATIONS #####
      |
      |
      |
      // ##### CORNER #####
      .hidden-md-down
        include ../components/corner.pug
      // ##### END CORNER #####
      |
      |