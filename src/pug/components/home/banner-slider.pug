                      |
                      |
                      a(href='#')
                        img(src=assets+"/images/social/play-store.png" alt="play store")/
                      |
                      |
                .col-md-5.col-lg-6.px-lg-6
                  .img
                    |
                    |
                    img.img-slide1.img-2d3d(
                      src=img_assets+img_artwork[1]
                      data-2d=img_assets+img_artwork[0]
                      data-3d=img_assets+img_artwork[1]
                      alt='banner 1 3D'
                    )/
                    |
                    |
        #slide2.slide
          .inner
            .container
              .row
                .col-md-7.col-lg-6.px-sm-6.px-0.d-flex.align-center.order-md-last
                  .text
                    h4.use-text-title #{$t.social_landing.banner_title}
                    h5.use-text-subtitle #{$t.social_landing.banner_desc}
                    .btn-area
                      |
                      |
                      a.btn-flat.waves-effect.btn-large.button.primary-text(href='#')
                        | #{$t.common.btn_detail}
                      |
                      |
                      a.btn.waves-effect.button.btn-large.secondary(href=link.social.register)
                        | #{$t.common.btn_get}
                      |
                      |
                .col-md-5.col-lg-6.order-md-first
                  .img
                    |
                    |
                    img.img-2d3d.img-slide2(
                      src=img_assets+img_artwork[3]
                      data-2d=img_assets+img_artwork[2]
                      data-3d=img_assets+img_artwork[3]
                      alt='banner 2 3D'
                    )/
                    |
                    |
        #slide3.slide.center-content
          .inner
            .container
              .row.justify-content-center
                .col-xs-12.px-md-12
                  .text.text-center
                    h4.use-text-title #{$t.social_landing.banner_title}
                    h5.use-text-subtitle #{$t.social_landing.banner_desc}
                    .btn-area.justify-content-center
                      |
                      |
                      a.btn-flat.waves-effect.btn-large.button.primary-text(href='#')
                        | #{$t.common.btn_detail}
                      |
                      |
                      a.btn.waves-effect.button.btn-large.secondary(href=link.social.register)
                        | #{$t.common.btn_get}
                      |
                      |
                .col-xs-12
                  .img.h-banner
