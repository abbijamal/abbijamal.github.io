              )/
              |
              |
            .container
              .row
                .col-md-7.col-lg-6.px-sm-6.px-0.d-flex.align-center
                  .text
                    h4.use-text-title #{$t.social_landing.banner_title}
                    h5.use-text-subtitle #{$t.social_landing.banner_desc}
